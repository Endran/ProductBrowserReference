<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/itemview_item_size">

    <ImageView
        android:id="@+id/imageView"
        tools:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/itemview_item_size"
        android:layout_height="@dimen/itemview_item_size"
        android:contentDescription="@string/itemview_product_contentDescription"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitle"
            tools:text="Title"
            android:layout_gravity="top"
            android:layout_margin="@dimen/itemview_text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewStock"
            tools:text="Stock"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/itemview_text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>
